<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="375dp"
    android:layout_height="400dp"
    android:background="@drawable/bg_cards">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Selecciona un mÃ©todo de pago"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
        <FrameLayout
            android:id="@+id/ly_paypal"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:background="@drawable/bg_cards"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="startColeccionActivity">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="Paypal"
                android:textColor="@color/teal_200"/>
            <ImageView
                android:id="@+id/iv_logoPaypal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|end"
                android:background="@android:color/transparent"
                android:clipToOutline="true"
                android:elevation="20dp"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/ly_gPay"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:background="@drawable/bg_cards"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="startColeccionActivity">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="Google Pay"
                android:textColor="@color/teal_200"/>
            <ImageView
                android:id="@+id/iv_logoGPay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|end"
                android:background="@android:color/transparent"
                android:clipToOutline="true"
                android:elevation="20dp"
                android:scaleType="centerCrop"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/ly_redsys"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="15dp"
            android:background="@drawable/bg_cards"
            android:elevation="10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="startColeccionActivity">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:text="Redsys"
                android:textColor="@color/teal_200"/>
            <ImageView
                android:id="@+id/iv_logoRedsys"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center|end"
                android:background="@drawable/bg_avatar"
                android:clipToOutline="true"
                android:elevation="20dp"
                android:scaleType="centerCrop"/>
        </FrameLayout>

    </LinearLayout>
</FrameLayout>