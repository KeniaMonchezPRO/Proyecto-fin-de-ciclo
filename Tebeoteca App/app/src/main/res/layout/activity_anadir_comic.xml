<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_cards"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical"
            android:padding="20dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn_atras"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_glass_button"
                    android:src="@drawable/ic_next"
                    android:contentDescription="atrás"
                    android:scaleType="centerInside"
                    app:tint="#22103b"
                    android:rotation="180"
                    android:onClick="finishDialog"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Añadir Comic"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
            <!--FORM:-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp">
                <!--Portada-->
                <ImageButton
                    android:id="@+id/iv_portada"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"/>
                <!--Título-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    app:boxStrokeWidth="1dp"
                    android:hint="Título"
                    app:hintTextColor="@color/teal_200"
                    android:textColorHint="@color/teal_200"
                    app:cursorColor="@color/teal_200"
                    app:boxStrokeColor="@color/text_input_stroke_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>
                </com.google.android.material.textfield.TextInputLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--Fecha de lanzamiento-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fechaLanzamiento_layout"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:layout_marginTop="10dp"
                        app:boxStrokeWidth="1dp"
                        android:hint="Fecha de lanzamiento"
                        app:hintTextColor="@color/teal_200"
                        android:textColorHint="@color/teal_200"
                        app:boxStrokeColor="@color/text_input_stroke_color"
                        app:cursorColor="@color/teal_200"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_fechaLanzamiento"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:textAlignment="center"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--Fecha de lanzamiento-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fechaPublicacion_layout"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        app:boxStrokeWidth="1dp"
                        android:hint="Fecha de publicación"
                        app:hintTextColor="@color/teal_200"
                        android:textColorHint="@color/teal_200"
                        app:boxStrokeColor="@color/text_input_stroke_color"
                        app:cursorColor="@color/teal_200"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_fechaPublicacion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:textAlignment="center"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </FrameLayout>
                <!--Autores
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:boxStrokeWidth="1dp"
                    android:hint="Autores"
                    app:hintTextColor="@color/teal_200"
                    android:textColorHint="@color/teal_200"
                    app:boxStrokeColor="@color/text_input_stroke_color"
                    app:cursorColor="@color/teal_200"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_autores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>
                </com.google.android.material.textfield.TextInputLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    tools:ignore="MissingConstraints">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutAutores"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="Autores"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeColor="@color/text_input_stroke_color"
                        app:hintTextColor="@color/teal_200"
                        android:textColorHint="@color/teal_200"
                        app:cursorColor="@color/teal_200"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteTextViewAutores"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:padding="20dp"
                            android:layout_gravity="center"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:textCursorDrawable="@null"
                            android:completionThreshold="1"
                            android:imeOptions="actionDone"
                            android:inputType="textCapWords"
                            android:backgroundTint="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupAutores"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:chipSpacingHorizontal="8dp"
                        app:chipSpacingVertical="4dp" />
                </LinearLayout>

                <!--Descripcion-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    app:boxStrokeWidth="1dp"
                    android:hint="Descripción"
                    app:hintTextColor="@color/teal_200"
                    android:textColorHint="@color/teal_200"
                    app:cursorColor="@color/teal_200"
                    app:boxStrokeColor="@color/text_input_stroke_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:inputType="textMultiLine"
                        android:ems="10"/>
                </com.google.android.material.textfield.TextInputLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <!--idioma original-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinner_idiomaOriginal_layout"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:hint="Idioma Original"
                        app:hintTextColor="@color/teal_200"
                        android:textColorHint="@color/teal_200"
                        app:boxStrokeColor="@color/text_input_stroke_color"
                        app:boxStrokeWidth="1dp"
                        android:background="@android:color/transparent"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                        <AutoCompleteTextView
                            android:id="@+id/spinner_idiomaOriginal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:textCursorDrawable="@null"
                            android:backgroundTint="@android:color/transparent"
                            android:completionThreshold="1" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <!--categoria-->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/spinner_categorias_layout"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:hint="Categoría"
                        app:hintTextColor="@color/teal_200"
                        android:textColorHint="@color/teal_200"
                        app:boxStrokeColor="@color/text_input_stroke_color"
                        app:boxStrokeWidth="1dp"
                        android:background="@android:color/transparent"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                        <AutoCompleteTextView
                            android:id="@+id/spinner_categorias"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:textCursorDrawable="@null"
                            android:backgroundTint="@android:color/transparent"
                            android:completionThreshold="1" />
                    </com.google.android.material.textfield.TextInputLayout>
                </FrameLayout>
                <!-- Estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado"
                        android:textSize="12sp"
                        android:textColor="@color/teal_200"
                        android:layout_marginBottom="8dp"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:scrollbars="none">
                        <RadioGroup
                            android:id="@+id/rg_EstadoComic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/r_publicado"
                                android:layout_width="95dp"
                                android:layout_height="wrap_content"
                                android:text="Publicado"
                                android:textSize="12sp"
                                android:textColor="#FFFFFF"
                                android:buttonTint="@color/radio_button_tint"
                                style="@style/Widget.Material3.CompoundButton.RadioButton" />
                            <RadioButton
                                android:id="@+id/radio_en_progreso"
                                android:layout_width="105dp"
                                android:layout_height="wrap_content"
                                android:text="En progreso"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:buttonTint="#00BCD4"
                                style="@style/Widget.Material3.CompoundButton.RadioButton" />
                            <RadioButton
                                android:id="@+id/radio_completado"
                                android:layout_width="105dp"
                                android:layout_height="wrap_content"
                                android:text="Completado"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:buttonTint="#00BCD4"
                                style="@style/Widget.Material3.CompoundButton.RadioButton" />
                            <RadioButton
                                android:id="@+id/radio_descontinuado"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Descontinuado"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:buttonTint="#00BCD4"
                                style="@style/Widget.Material3.CompoundButton.RadioButton" />
                        </RadioGroup>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
            <!--FOOTER-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>