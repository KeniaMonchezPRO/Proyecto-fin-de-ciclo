<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/perfil_cliente"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:id="@+id/ly_perfil_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="8dp">

            <!-- Banner -->
            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center|top"
                android:background="@drawable/bg_banner"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"/>

            <!-- Avatar -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg_avatar"
                android:elevation="1dp"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                android:background="@drawable/bg_cards"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_displayNombreEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Editorial Panini"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_displayNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="\@PaniniEdito"
                    android:textColor="#70FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ASDASDASD askjdahskjdhakjs akjsdhsa aksjdkajs askjdakjsd kajsdkajsd kjasdkjasd jkdh"
                    android:textAlignment="center"
                    android:layout_marginVertical="20dp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btn_editarPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar perfil"
                    android:background="@drawable/bg_glass_menu"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novedades"
                android:layout_gravity="start | center"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>