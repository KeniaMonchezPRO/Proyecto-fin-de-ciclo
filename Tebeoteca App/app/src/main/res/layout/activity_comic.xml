<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Ficha del Comic"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_detalle_portada"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sin_foto"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_detalle_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Título"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/teal_200"/>
                <TextView
                    android:id="@+id/tv_detalle_selloEditorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:text="Sello Editorial"
                    android:textColor="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/tv_detalle_audiencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:text="Audiencia"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_detalle_fechaLanzamiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="Fecha de Lanzamiento"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_detalle_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="Estado"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_detalle_autores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:text="Autores"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:text="Descripción detallada:"
            android:textColor="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/tv_detalle_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:text="Descripción detallada"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:text="País de origen:"
            android:textColor="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/tv_detalle_paisOrigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:text="País de origen"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:text="Idioma Original:"
            android:textColor="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/tv_detalle_idiomaOriginal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:text="Idioma Original"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:text="Categorías:"
            android:textColor="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/tv_detalle_categorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textSize="12sp"
            android:text="Categorías"
            android:textColor="@color/white"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/btn_eliminarComic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="100dp"
                android:text="Eliminar"
                android:backgroundTint="#8003DAC5"/>
            <Button
                android:id="@+id/btn_editarComic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Editar"
                android:backgroundTint="#8003DAC5"/>
        </FrameLayout>
        <!--FOOTER-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</ScrollView>
