<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:paddingHorizontal="20dp"
    android:paddingVertical="12dp"
    android:scrollbars="none">
    <LinearLayout
        android:id="@+id/ly_comics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="60dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:text="Secciones"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
            </FrameLayout>
            <!-- Empiezan las secciones-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="20dp">
                <LinearLayout
                    android:id="@+id/seccionFavoritos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_cards"
                    android:elevation="10dp"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favoritos"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/tv_verTodoFavs"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:text="Ver todo"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/teal_200"/>
                    </FrameLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none">
                        <LinearLayout
                            android:id="@+id/favoritos_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical" />
                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/seccionRutasLectura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_cards"
                    android:elevation="10dp"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rutas de lectura"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/tv_verTodoRutas"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:text="Ver todo"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/teal_200"/>
                    </FrameLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none">
                        <LinearLayout
                            android:id="@+id/rutasLectura_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical" />
                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/seccionEntradasWiki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_cards"
                    android:elevation="10dp"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entradas wiki"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/tv_verTodoEntradas"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:text="Ver todo"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/teal_200"/>
                    </FrameLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none">
                        <LinearLayout
                            android:id="@+id/entradasWiki_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical" />
                    </HorizontalScrollView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/seccionEventos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_cards"
                    android:elevation="10dp"
                    android:padding="20dp"
                    android:layout_marginBottom="10dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eventos"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/tv_verTodoEventos"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|end"
                            android:text="Ver todo"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="@color/teal_200"/>
                    </FrameLayout>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none">
                        <LinearLayout
                            android:id="@+id/eventosLector_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical" />
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--FOOTER-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
        </LinearLayout>
    </LinearLayout>
</ScrollView>